# Application Environment
NODE_ENV=development

# Server Configuration
PORT=8787

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/shovelheroes

# Security Configuration
# IMPORTANT: Generate a secure random string for production (at least 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=dev_secret_change_me_in_production_use_openssl_rand_base64_32

# CORS Configuration
# Comma-separated list of allowed origins (leave empty to allow all in development)
# Example: https://app.shovelheroes.com,https://admin.shovelheroes.com
CORS_ALLOWLIST=

# Logging Configuration
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Email Configuration (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@shovelheroes.local

# Rate Limiting
# Maximum requests per IP per time window
RATE_LIMIT_MAX=300
RATE_LIMIT_WINDOW=1 minute